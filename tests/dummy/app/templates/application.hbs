<h2 id="title">Welcome to Ember</h2>

{{date-time-picker-wrapper
  initialDatetime
  class="display-inline"
  options=(hash
    className="display-inline"
    inline=true
    step=5
    format="d/m/Y"
  )
  action=(action (mut initialDatetime))
}}
<button id="toggle" {{action "shouldShow"}}>toggle</button>
{{#if shouldShow}}
  {{date-time-picker-wrapper
    datetime
    class="display-regular"
    options=(hash
      className="display-regular"
      format="d/m/Y"
    )
    action=(action "updateCustomFormat")
  }}
{{/if}}
<button id="reset" {{action "reset"}}>reset all</button>